---
import "@styles/global.css";
import "@styles/custom.css";
import "@styles/variables.css";
import "@styles/reset.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;

const metaData = {
  siteName: "Alana Morin",
  titleDefault: "Alana Morin - Computer Systems Analyst",
  description:
      "Portfolio of Alana Morin, Computer Systems Analyst specializing in systems analysis, process modeling, requirements documentation, and integration design. Featuring case studies, diagrams, and analytical artifacts.",
  keywords:
      "Computer Systems Analyst, Systems Analyst, Business Systems Analysis, Requirements Analysis, Process Modeling, DFD, ERD, Sequence Diagrams, Systems Design, Portfolio",
  type: "website",
  imageType: "image/png",
  imageWidth: "1600",
  imageHeight: "900",
  twitterCard: "summary_large_image",
};

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL("/seo.png", Astro.url);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content={metaData.keywords} />
    <meta name="description" content={metaData.description} />
    <link rel="icon" type="image/svg+xml" href="/favicon-astronaut.svg" />
    <link rel="canonical" href={canonicalURL} />
    <title>{title}</title>
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content={metaData.type} />
    <meta property="og:site_name" content={metaData.siteName} />
    <meta property="og:description" content={metaData.description} />
    <meta property="og:title" content={title} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:image:type" content={metaData.imageType} />
    <meta property="og:image:alt" content={title} />
    <meta property="og:image:width" content={metaData.imageWidth} />
    <meta property="og:image:height" content={metaData.imageHeight} />
    <meta name="twitter:card" content={metaData.twitterCard} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={metaData.description} />
    <meta name="twitter:image" content={socialImageURL} />
    <meta name="twitter:image:alt" content={title} />
      <script type="application/ld+json">
          {
              "@context": "https://schema.org",
              "@type": "Person",
              "name": "Alana Morin",
              "url": "https://alanamorin.com/",
              "jobTitle": "Computer Systems Analyst",
              "sameAs": [
                  "https://www.linkedin.com/in/alana-morin",
                  "https://github.com/alanimus"
              ]
          }
      </script>

  </head>
  <body>

    <slot />

  </body>
</html>
